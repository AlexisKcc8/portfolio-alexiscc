import Layout from "@layouts/Layout.astro";

import Hero from "@components/myComponents/Hero.astro";
import About from "@components/myComponents/About.astro";
import AutomaticCarouselFade from "@components/myComponents/AutomaticCarouselFade.astro";
import ExperienceSection from "@components/myComponents/ExperienceSection.astro";
import Projects from "@components/myComponents/Projects.astro";
