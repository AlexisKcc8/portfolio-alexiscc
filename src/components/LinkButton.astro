---
import { Icon } from "astro-icon/components";
import { twMerge } from "tailwind-merge";

const {
  className,
  url,
  isTarget = true,
  title,
  subtitle,
  nameIcon,
  containerIconClass,
  classIcon,
} = Astro.props;

const hasContent = Astro.slots;

const target = isTarget ? "_blank" : "_self";
const rel = isTarget ? "noopener noreferrer" : undefined;
const ariaLabel = title
  ? `${title}${subtitle ? ` â€“ ${subtitle}` : ""}`
  : "Enlace";
---

<a
  href={url}
  target={target}
  rel={rel}
  aria-label={ariaLabel}
  class={twMerge(
    "flex items-center gap-3 h-full p-3 sm:p-4 rounded-xl shadow-lg backdrop-blur-md transition-all duration-300 border  sm:w-auto bg-white/70 border-gray-200/30 hover:bg-white/80 focus:outline-none focus-visible:ring-2 focus-visible:ring-violet-500",
    className
  )}
>
  <div
    class={twMerge(
      "p-2 rounded-lg transition-colors duration-300",
      containerIconClass
    )}
  >
    <Icon
      name={nameIcon}
      is:inline
      class={twMerge("h-6 w-6 transition-colors duration-300", classIcon)}
    />
  </div>
  <div class="text-left">
    <h3 class="font-semibold text-sm transition-colors duration-300">
      {title}
    </h3>
    <p class="text-xs transition-colors duration-300">
      {subtitle}
    </p>
  </div>
</a>
