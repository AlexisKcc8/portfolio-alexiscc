---
import { Icon } from "astro-icon/components";
import ContainerCenter from "./ContainerCenter.astro";
import { myContact } from "@data/dataContact";
import { twMerge } from "tailwind-merge";
import MyTitle from "./MyTitle.astro";
---

<section
  id="contacto"
  class="px-4 py-16 bg-gray-50 text-gray-900 flex justify-center items-center"
  aria-labelledby="contact-title"
>
  <ContainerCenter class="laptop:max-w-4xl">
    <header class="mb-10 text-center px-2">
      <MyTitle idTitle="contact-title"> ¿Listo para conectar? </MyTitle>
      <p class="text-gray-600 text-base sm:text-lg max-w-xl mx-auto">
        Elige tu canal favorito y empecemos a trabajar en algo que te emocione.
        ¡Estoy a un mensaje de distancia!
      </p>
    </header>

    <div class="grid gap-4 sm:gap-6 grid-cols-1 sm:grid-cols-2">
      <!-- Card genérica -->
      {
        myContact.map(({ href, bg, textColor, title, name, desc, icon }) => (
          <a
            href={href}
            class="group flex items-center gap-3 p-4 sm:p-6 bg-white border rounded-xl shadow-sm hover:shadow-md transition-all duration-200"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Contáctame por ${title}`}
          >
            <div class={`p-3 rounded-xl ${bg} transition-colors`}>
              <Icon
                name={icon}
                class={twMerge("h-6 w-6", textColor)}
                is:inline
                aria-hidden="true"
              />
            </div>
            <div class="min-w-0">
              <h3 class="font-semibold text-xs sm:text-sm text-gray-500">
                {title}
              </h3>
              <h2 class="font-semibold text-lg sm:text-xl truncate">{name}</h2>
              <p class="text-gray-500 text-xs sm:text-sm">{desc}</p>
            </div>
          </a>
        ))
      }
    </div>
  </ContainerCenter>
</section>
