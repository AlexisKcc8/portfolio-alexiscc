---
import { Image } from "astro:assets";
import LinkButton from "./LinkButton.astro";

const { project } = Astro.props;
const { nameProject, description, urlImg, urlRepo, urlLive } = project;
// ref = { itemActive };
---

<div
  class="relative w-full px-2 text-start flex flex-col snap-center flex-shrink-0 overflow-hidden hover:cursor-pointer will-change-[transform] tablet:w-[32rem] laptop:h-auto"
>
  <div class="flex flex-col h-full">
    <picture
      class="relative w-full bg-alx-50 rounded-2xl h-[26rem] phone-lg:h-[28rem] tablet:h-[32rem] laptop:h-[36rem] p-5 pb-0 mb-4 tablet:p-12 tablet:pb-0"
    >
      <Image
        src={urlImg}
        alt={`image of ${nameProject}`}
        class="w-full h-full object-cover object-top rounded-lg"
        data-aos="fade-up"
      />
    </picture>

    <div
      class="flex flex-col justify-between flex-1 text-center tablet:text-start px-6 laptop:p-0 laptop:pr-4"
    >
      <div>
        <h5 class="font-bold text-gray-800 text-2xl mb-2">{nameProject}</h5>
        <p class="text-gray-500 prose-sm">{description}</p>
      </div>
      <footer
        class="my-4 flex justify-center items-center tablet:items-start tablet:justify-start gap-4"
      >
        <LinkButton
          url={urlRepo}
          className=""
          title="CÃ³digo"
          ,
          subtitle="Repositorio en GitHub"
          ,
          nameIcon="github"
          ,
          containerIconClass="bg-alx-200"
          ,
          classIcon="text-alx-950"
        />
        <LinkButton
          url={urlLive}
          className=""
          title="Demo"
          ,
          subtitle="Sitio web en vivo"
          ,
          nameIcon="live"
          ,
          containerIconClass="bg-alx-50"
          classIcon="text-alx-900"
        />
      </footer>
    </div>
  </div>
</div>
